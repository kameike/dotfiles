export GOPATH=$HOME/go
export PATH=$HOME/.nodebrew/current/bin:$PATH
export PATH=$HOME/.rbenv/bin:$PATH
export PATH=$HOME/Library/Python/3.6/bin/:$PATH
export PATH=$HOME/.config/bin:$PATH
export PATH=$HOME/go/bin/:$PATH
export CONFIG_PATH=$HOME/.config/
export BLOG_PATH=$HOME/Library/Mobile\ Documents/iCloud~com~coderforart~iOS~MWeb/Documents
echo "load bashrc"

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi


alias d-clean='docker rm -v $(docker ps -aq -f status=exited)'

alias bashrc='nvim ~/.bashrc && source ~/.bashrc'
alias profile='nvim ~/.bash_profile && source ~/.bash_profile'
alias config='nvim ~/.config'

alias screen-cd-here='pwd | xargs screen -X chdir'
alias sweep-branch='git branch -D `git branch --merged | grep -v \* | xargs`'
alias gohiki='cd ~/gohiki && sh yoshina.sh'

alias move-branch="git branch --move \`git branch | grep \* | sed 's/\*//'\` "
alias pbedit="pbpaste > ~/tmp/current_buffer && nvim  ~/tmp/current_buffer  && cat ~/tmp/current_buffer | pbcopy"
alias gc="git add --all && git commit"
alias gp="git push \`git remote\` HEAD"
alias gcp="git add --all && git commit &&  git push \`git remote\` HEAD"
alias gs="git status"
alias c="clear"
alias rand="openssl rand -base64 16 | colrm 17"
alias p="cd ~/pixiv"
alias md="open ~/Library/Mobile\ Documents/iCloud~com~coderforart~iOS~MWeb/Documents/tmp.md"
alias clean-desktop="ls ~/Desktop/ | grep -v screen | grep -v buf | xargs -I % mv ~/Desktop/%  ~/Desktop/buf/%"
alias blog="cd ~/Library/Mobile\ Documents/iCloud~com~coderforart~iOS~MWeb/Documents"
alias b="blog && cp articles/template.md"

stty stop undef
