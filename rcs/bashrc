export TMP=$HOME/tmp
export DEV=$HOME/dev
export GOPATH=$HOME/go
export CONFIG_PATH=$HOME/.config

export VISUAL=nvim
export EDITOR="$VISUAL"

# js
export PATH=$HOME/.nodebrew/current/bin:$PATH
# ruby
export PATH=$HOME/.rbenv/bin:$PATH
# python
export PATH=$HOME/Library/Python/3.6/bin/:$PATH
# go
export PATH=$HOME/go/bin/:$PATH
# flutter
export PATH=$DEV/flutter/bin:$PATH
# my shell scripts
export PATH=$CONFIG_PATH/bin:$PATH

# markdown stuff
export ICLOUD_PATH=$HOME/Library/Mobile\ Documents
export AUTOMATOR_PATH=$ICLOUD_PATH/com~apple~Automator/Documents
export MARKDOWN_PATH=$ICLOUD_PATH/iCloud~com~coderforart~iOS~MWeb/Documents
export BLOG_PATH=$MARKDOWN_PATH
export NIPPO_PATH=$MARKDOWN_PATH/nippo

# prefix
export PS1="[\W] "


echo "load bashrc"


if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

unalias -a

alias d-clean='docker rm -v $(docker ps -aq -f status=exited)'

alias bashrc='nvim ~/.bashrc && source ~/.bashrc'
alias bash-profile='nvim ~/.bash_profile && source ~/.bash_profile'
alias config='nvim ~/.config'

alias screen-cd-here='pwd | xargs screen -X chdir'
alias sweep-branch='git branch -D `git branch --merged | grep -v \* | xargs`'
alias gohiki='cd ~/gohiki && sh yoshina.sh'

alias move-branch="git branch --move \`git branch | grep \* | sed 's/\*//'\` "
alias pbedit="pbpaste > ~/tmp/current_buffer && nvim  ~/tmp/current_buffer  && cat ~/tmp/current_buffer | pbcopy"
alias e="pbedit"
alias gc="git add --all && git commit"
alias gp="git push \`git remote\` HEAD"
alias gf="git fetch"
alias gm="git branch --all | fzf | xargs git merge"
alias gb="git branch --all"
alias gch="git branch --all | fzf | xargs git checkout"
alias gcp="git add --all && git commit &&  git push \`git remote\` HEAD"
alias gs="git status"
alias reload="source ~/.bashrc"
alias c="reload && clear"
alias rand="openssl rand -base64 16 | colrm 17"
alias p="cd ~/pixiv"
alias pal="cd ~/pixiv/palcy-ios"
alias md="open ~/Library/Mobile\ Documents/iCloud~com~coderforart~iOS~MWeb/Documents/tmp.md"
alias money="open https://docs.google.com/spreadsheets/d/1TE0p2P0aEgg03fYS0aBa5TvXmdZYpAHrDce-LQwJEbo/edit#gid=0"
alias github="open https://github.com/notifications" 
alias editbrewfile="nvim $CONFIG_PATH/brewfile/Brewfile" 
alias s="screen" 
alias close="open '$AUTOMATOR_PATH/killAll.app'" 

alias break="nippo && sleep 300 && say back to work"

stty stop undef
stty start undef


