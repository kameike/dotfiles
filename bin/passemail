#!/bin/sh
#vim: syntax=sh

set -eu

target=$(mktemp "${TMPDIR:-/tmp}/email.XXXXXX")

{
  echo "様"
  echo ""
  echo "お世話になります。タイミーの亀田です。"
  echo "先程送信しました添付ファイルの解凍パスワードは以下になります"
  echo ""
  pbpaste
  echo ""
  echo "どうぞ引き続きよろしくお願いします。"
  echo ""
  echo "亀田"
} > "$target"

cat "$target" | pbcopy
rm "$target"
